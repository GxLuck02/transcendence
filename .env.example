# Fastify Backend Configuration
NODE_ENV=development
PORT=3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Database Configuration (SQLite)
# SQLite database file will be created at: fastify-backend/data/transcendence.db
# No additional configuration needed for SQLite

# Redis Configuration (for WebSocket scaling)
REDIS_HOST=redis
REDIS_PORT=6379

# OAuth 42 (Optional - Module: Remote Authentication)
OAUTH42_CLIENT_ID=your-42-client-id-here
OAUTH42_SECRET=your-42-client-secret-here
OAUTH42_REDIRECT_URI=https://localhost:8443/api/auth/oauth/42/callback/

# OAuth GitHub (Optional - Alternative to 42)
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here
GITHUB_REDIRECT_URI=https://localhost:8443/api/auth/oauth/github/callback/

# Blockchain Configuration - Avalanche C-Chain (Fuji Testnet)
# Get testnet AVAX from: https://faucet.avax.network/
WEB3_PROVIDER_URI=https://api.avax-test.network/ext/bc/C/rpc
BLOCKCHAIN_PRIVATE_KEY=your-private-key-here-without-0x-prefix
CONTRACT_ADDRESS=will-be-set-after-deployment

# Security
# CORS origins (comma-separated)
CORS_ORIGIN=https://localhost:8443,http://localhost:8443

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# Logging
LOG_LEVEL=info
